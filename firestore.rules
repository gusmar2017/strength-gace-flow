rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules - allow all authenticated users
    // TODO: Tighten these before production

    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Subcollections under user
      match /{subcollection}/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Workouts are readable by all authenticated users
    match /workouts/{workoutId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via backend
    }

    // Programs are readable by all authenticated users
    match /programs/{programId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via backend
    }
  }
}
